/* pages/enterprise/enterprise.wxss */
/* 企业库样式 - 修复版 */

.page-container {
  padding-bottom: 200rpx;
  background-color: #F8FAFC;
  min-height: 100vh;
}

/* 搜索栏 */
.search-header {
  position: sticky;
  top: 0;
  z-index: 90;
  background: rgba(248, 250, 252, 0.9);
  backdrop-filter: blur(10px);
  padding: 20rpx 36rpx;
}

.search-box {
  background: #FFFFFF;
  border: 1px solid #E2E8F0;
  border-radius: 40rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1E293B;
}

.clear-icon {
  padding: 10rpx;
  color: #94A3B8;
  font-size: 32rpx;
}

/* 列表容器 */
.list-container {
  padding: 20rpx 36rpx;
}

.ent-item-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #F1F5F9;
}

.ent-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
}

.ent-icon-badge {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
  color: #2563EB;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.ent-text-col {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.ent-name {
  font-size: 30rpx;
  color: #0F172A;
  font-weight: 600;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ent-sub {
  font-size: 24rpx;
  color: #64748B;
}

.edit-btn {
  padding: 10rpx 24rpx;
  background: #F1F5F9;
  color: #475569;
  font-size: 24rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.select-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%);
  color: #FFF;
  font-size: 24rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #94A3B8;
  font-size: 28rpx;
}

.empty-emoji {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 浮动按钮 */
.float-add-btn {
  position: fixed;
  bottom: 60rpx; /* 提高一点避免被遮挡 */
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%);
  color: #FFF;
  height: 96rpx;
  padding: 0 48rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 16rpx 40rpx rgba(59, 130, 246, 0.35);
  z-index: 99; /* 足够高的层级 */
  font-size: 30rpx;
  font-weight: 600;
}

.plus-char {
  font-size: 40rpx;
  margin-right: 12rpx;
  margin-top: -4rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.4);
  backdrop-filter: blur(4px);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 640rpx;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 24rpx 48rpx rgba(0,0,0,0.1);
  overflow: hidden;
  animation: popIn 0.2sease-out;
}

@keyframes popIn {
  from { opacity: 0; transform: scale(0.95); }
  to { opacity: 1; transform: scale(1); }
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1px solid #F1F5F9;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
}

.modal-body {
  padding: 32rpx;
  max-height: 600rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #64748B;
  margin-bottom: 12rpx;
}

.req { color: #EF4444; }

.input {
  width: 100%;
  height: 88rpx;
  background: #F8FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #0F172A;
  box-sizing: border-box;
}

.input:focus {
  border-color: #3B82F6;
  background: #FFF;
}

.modal-actions {
  padding: 32rpx;
  border-top: 1px solid #F1F5F9;
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
}

.cancel-btn {
  background: #F1F5F9;
  color: #64748B;
}

.confirm-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%);
  color: #FFF;
}
