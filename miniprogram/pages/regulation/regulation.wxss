/* pages/regulation/regulation.wxss */
.page {
  min-height: 100vh;
  background: var(--light-bg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  background: var(--light-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin: 0 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-tertiary);
  text-align: center;
}
