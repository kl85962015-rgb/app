/* pages/profile/profile.wxss */
.profile-header-light {
  padding: 60rpx 0 80rpx; /* 底部留空间给悬浮卡片 */
  background: var(--brand-dark); /* 深色头部背景 */
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.avatar-shadow {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255,255,255,0.4);
  margin-bottom: 20rpx;
}

.avatar-shadow image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-name-tech {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFF;
  margin-bottom: 12rpx;
}

.role-chip {
  background: rgba(255,255,255,0.1);
  padding: 6rpx 24rpx;
  border-radius: 100rpx;
}

.role-chip text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.stats-float {
  padding: 0 36rpx;
  margin-top: -60rpx; /* 负边距实现悬浮 */
}

.stats-row-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 0;
}

.stat-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-val {
  font-size: 48rpx;
  color: var(--text-title);
}

.stat-lbl {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-top: 4rpx;
}

.vert-line {
  width: 1px;
  height: 60rpx;
  background: #F1F5F9;
}

.menu-list-area {
  padding: 40rpx 36rpx;
}

.mt-24 { margin-top: 24rpx; }

.menu-card {
  padding: 0 32rpx;
}

.menu-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
}

.menu-txt {
  font-size: 30rpx;
  color: var(--text-body);
  font-weight: 500;
}

.row-right {
  display: flex;
  align-items: center;
}

.badge-num {
  background: var(--accent-orange);
  color: var(--text-on-accent-orange);
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 100rpx;
  margin-right: 16rpx;
  font-weight: 600;
}

.arr {
  color: var(--text-placeholder);
  font-size: 32rpx;
}
