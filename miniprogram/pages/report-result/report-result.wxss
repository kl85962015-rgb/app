/* pages/report-result/report-result.wxss */
/* 报告详情 - Luminous Light */

.page-container {
  padding-bottom: 200rpx;
}

.report-header {
  background: #FFF;
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px dashed #E2E8F0;
}

.report-status {
  display: flex;
  align-items: center;
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  margin-bottom: 24rpx;
}

.report-status.safe { background: #DCFCE7; color: #166534; }
.report-status.warning { background: #FFEDD5; color: #C2410C; }

.status-icon { margin-right: 12rpx; }
.status-msg { font-weight: 700; font-size: 28rpx; }

.report-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-title);
  text-align: center;
  margin-bottom: 12rpx;
}

.report-meta {
  font-size: 24rpx;
  color: var(--text-sub);
}

.summary-section {
  padding: 40rpx 60rpx;
}

.summary-card {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
  align-items: center;
}

.sum-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sum-val {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-title);
  font-family: 'DIN Alternate', sans-serif;
}

.sum-val.is-major { color: #DC2626; }

.sum-key {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-top: 8rpx;
}

.vert-div {
  width: 1px;
  height: 60rpx;
  background: #E2E8F0;
}

.list-section {
  padding: 0 36rpx;
}

.sec-label {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-bottom: 24rpx;
  letter-spacing: 1px;
  font-weight: 600;
}

.list-row-card {
  padding: 24rpx;
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.row-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #F1F5F9;
  margin-right: 24rpx;
  object-fit: cover;
}

.row-content {
  flex: 1;
}

.row-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.row-loc {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-title);
}

.lvl-tag {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.lvl-tag.major { background: #FEE2E2; color: #DC2626; }
.lvl-tag.general { background: #F3F4F6; color: #4B5563; }

.row-desc {
  font-size: 26rpx;
  color: var(--text-body);
  line-height: 1.4;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFF;
  padding: 30rpx 40rpx calc(30rpx + env(safe-area-inset-bottom));
  border-top: 1px solid #E2E8F0;
}

.export-btn {
  background: var(--brand-dark);
  color: #FFF;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  font-weight: 600;
  box-shadow: 0 4px 16px rgba(15, 23, 42, 0.3);
}
