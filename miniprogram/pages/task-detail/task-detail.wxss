/* pages/task-detail/task-detail.wxss */

.page-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding: 24rpx;
  padding-bottom: 180rpx;
}

.task-header {
  margin-bottom: 24rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.status-badge.pending {
  background-color: rgba(245, 124, 0, 0.1);
  color: var(--warning-color);
}

.status-badge.processing {
  background-color: rgba(30, 58, 95, 0.1);
  color: var(--primary-color);
}

.status-badge.completed {
  background-color: rgba(46, 125, 50, 0.1);
  color: var(--success-color);
}

.task-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.task-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.task-meta text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.info-section {
  margin-bottom: 24rpx;
  padding: 0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-value {
  font-size: 28rpx;
  color: var(--text-primary);
}

.content-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.content-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.hazards-section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.hazard-count {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.hazard-item {
  display: flex;
  padding: 20rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.hazard-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.hazard-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hazard-desc {
  font-size: 28rpx;
  color: var(--text-primary);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hazard-tags {
  display: flex;
  gap: 12rpx;
}

.level-tag, .status-tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.level-tag.general {
  background-color: rgba(245, 124, 0, 0.1);
  color: var(--warning-color);
}

.level-tag.major {
  background-color: rgba(216, 67, 21, 0.1);
  color: var(--danger-color);
}

.status-tag.pending {
  background-color: rgba(245, 124, 0, 0.1);
  color: var(--warning-color);
}

.status-tag.processing {
  background-color: rgba(30, 58, 95, 0.1);
  color: var(--primary-color);
}

.status-tag.completed {
  background-color: rgba(46, 125, 50, 0.1);
  color: var(--success-color);
}

.empty-hazards {
  text-align: center;
  padding: 40rpx;
  color: var(--text-placeholder);
  font-size: 28rpx;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.actions .btn {
  flex: 1;
}
