/* 4. 底部文字区 */
.card-footer {
  flex: 1;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 8rpx;
}

.func-label {
  font-size: 28rpx;
  font-weight: 600; /* 从 700 降为 600，更清秀 */
  color: #334155; /* 颜色微调为 Slate-700，不如纯黑生硬 */
  letter-spacing: 0.5px;
}
