/* pages/index/index.wxss */
/* 最终调整：Perfect Alignment & Frosted Glass */

.page-container {
  min-height: 100vh;
  position: relative;
  background-color: #F8FAFC;
  overflow: hidden;
  padding: 40rpx 40rpx 40rpx;
}

/* === 品牌头部 === */
.brand-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0 32rpx;
  margin-bottom: 20rpx;
}

.brand-logo {
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.15);
  margin-right: 24rpx;
}

.brand-info {
  display: flex;
  flex-direction: column;
}

.brand-name {
  font-size: 38rpx;
  font-weight: 700;
  color: #0F172A;
  letter-spacing: 1px;
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.brand-slogan {
  font-size: 24rpx;
  color: #64748B;
  margin-top: 4rpx;
}

/* === 顶部卡片 === */
.top-card {
  position: relative;
  z-index: 10;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(148, 163, 184, 0.1);
  margin-bottom: 40rpx;
}

.today-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 30rpx;
}

.progress-container {
  margin-bottom: 40rpx;
}

.progress-track {
  width: 100%;
  height: 20rpx;
  background: #F1F5F9;
  border-radius: 100rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6 0%, #2563EB 100%);
  border-radius: 100rpx;
}

.progress-text {
  display: flex;
  align-items: baseline;
}

.percent-num {
  font-size: 56rpx;
  font-weight: 800;
  color: #0F172A;
  margin-right: 12rpx;
  letter-spacing: -1px;
}

.percent-label {
  font-size: 24rpx;
  color: #64748B;
}

.main-action-btn {
  height: 96rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%); /* 品牌蓝绿渐变 */
  border-radius: 32rpx; /* 与功能卡片一致的圆角风格 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(59, 130, 246, 0.25);
}

.btn-txt {
  color: #FFF;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1px;
}

/* === 核心重构：功能网格 (优化版) === */
.function-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

/* 卡片容器 */
.func-card {
  position: relative;
  height: 280rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  overflow: hidden; 
  box-shadow: 0 12rpx 32rpx rgba(148, 163, 184, 0.1); /* 阴影更柔和 */
  display: flex;
  flex-direction: column;
  transition: transform 0.2s;
}

.func-card:active {
  transform: scale(0.98);
}

/* 1. 顶部渐变色块 */
.card-header-bg {
  height: 62%; /* 微调比例，给文字留更多空间 */
  width: 100%;
  position: relative;
  display: flex;
  align-items: center; /* 确保垂直居中 */
  justify-content: center; /* 确保水平居中 */
}

.bg-blue   { background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%); }
.bg-purple { background: linear-gradient(135deg, #A855F7 0%, #EC4899 100%); }
.bg-orange { background: linear-gradient(135deg, #F97316 0%, #FBBF24 100%); }
.bg-green  { background: linear-gradient(135deg, #10B981 0%, #34D399 100%); }

/* 2. 悬浮毛玻璃盒子 (Frosted White) */
.glass-icon-box {
  width: 104rpx;
  height: 104rpx;
  border-radius: 36rpx;
  
  /* 增强白雾感：提高白度，降低透明度 */
  background: rgba(255, 255, 255, 0.35); 
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  
  /* 边框改为半透明白 */
  border: 1px solid rgba(255, 255, 255, 0.5);
  /* 添加微弱的白色内发光，模拟厚度 */
  box-shadow: 
    0 8rpx 16rpx rgba(0, 0, 0, 0.08),
    inset 0 0 0 1px rgba(255, 255, 255, 0.2);
  
  display: flex;
  align-items: center;
  justify-content: center;
  
  /* 修正偏移：稍微向下位移，利用视觉重心 */
  transform: translateY(12rpx);
}

/* 3. 白色图标 */
.icon-img {
  width: 52rpx;
  height: 52rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  /* 增加投影，使其浮起 */
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.15));
}

