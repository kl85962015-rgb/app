/* pages/check/check.wxss */
/* 检查页面 - Luminous Premium (高级光感版) */

.page-container {
  padding-bottom: 240rpx; /* 给底部更宽裕的空间 */
  background-color: #F8FAFC;
  min-height: 100vh;
}

/* === 顶部企业条：悬浮玻璃卡片 === */
.top-bar-wrapper {
  padding: 30rpx 36rpx 0;
}

.top-bar {
  background: #FFFFFF;
  border-radius: 40rpx; /* 大圆角 */
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 20rpx 40rpx rgba(148, 163, 184, 0.08); /* 柔和弥散影 */
  border: 1px solid rgba(255, 255, 255, 0.6);
}

.ent-info {
  display: flex;
  flex-direction: column;
}

.lbl-sm {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.val-lg {
  font-size: 36rpx;
  font-weight: 700;
  color: #0F172A;
  letter-spacing: 0.5px;
}

.hazard-count {
  background: linear-gradient(135deg, #F1F5F9 0%, #E2E8F0 100%); /* 极淡灰渐变 */
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #FFF;
}

.count-val {
  font-size: 40rpx;
  font-weight: 800;
  color: #334155;
  line-height: 1;
  margin-bottom: 4rpx;
}

.count-lbl {
  font-size: 20rpx;
  color: #64748B;
  font-weight: 500;
}

/* === 表单主体 === */
.form-body {
  padding: 40rpx 36rpx;
}

.form-group-card {
  background: #FFFFFF;
  border-radius: 36rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  /* 去除边框，纯靠阴影 */
  box-shadow: 0 12rpx 30rpx rgba(148, 163, 184, 0.06); 
  transition: transform 0.2s;
}

.sec-head {
  margin-bottom: 32rpx;
}

.sec-title-cn {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 8rpx;
  display: block;
}

.sec-title-en {
  font-size: 24rpx;
  color: #94A3B8; /* 浅灰英文 */
  font-family: -apple-system, sans-serif;
  letter-spacing: 1px;
  text-transform: uppercase;
  font-weight: 600;
}

.req-dot {
  color: #EF4444;
  margin-left: 8rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

/* 照片网格 */
.grid-photos {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 更大的格子，3列 */
  gap: 24rpx;
}

.photo-cell {
  aspect-ratio: 1;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.photo-cell image {
  width: 100%;
  height: 100%;
}

.del-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  color: #FFF;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.add-cell {
  aspect-ratio: 1;
  background: #F8FAFC;
  border: 2px dashed #CBD5E1;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.add-cell:active {
  background: #F1F5F9;
  border-color: #94A3B8;
}

.plus-icon {
  font-size: 60rpx;
  color: #94A3B8;
  margin-bottom: 4rpx;
  font-weight: 300;
}

.add-txt {
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
}

/* 输入框 */
.input-clean {
  background: #F8FAFC;
  border: 1px solid transparent; /* 默认无边框 */
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 30rpx;
  color: #0F172A;
  transition: all 0.3s;
}

.input-clean:focus {
  background: #FFF;
  border-color: #E2E8F0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.textarea-clean {
  background: #F8FAFC;
  border: 1px solid transparent;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 30rpx;
  color: #0F172A;
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

/* 级别胶囊 */
.level-capsules {
  display: flex;
  gap: 32rpx;
}

.capsule {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #F1F5F9;
  border-radius: 28rpx;
  font-size: 30rpx;
  color: #64748B;
  background: #FFF;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 600;
}

/* 一般隐患选中：橙色柔和 */
.capsule.active[data-level="general"] {
  background: #FFF7ED; /* 极淡橙 */
  color: #EA580C;
  border-color: #FED7AA;
  box-shadow: 0 8rpx 20rpx rgba(234, 88, 12, 0.15);
}

/* 重大隐患选中：红色警示 */
.capsule.active[data-level="major"] {
  background: #FEF2F2; /* 极淡红 */
  color: #DC2626;
  border-color: #FECACA;
  box-shadow: 0 8rpx 20rpx rgba(220, 38, 38, 0.15);
}

/* 期限选择 */
.deadline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.quick-days {
  display: flex;
  gap: 16rpx;
}

.day-chip {
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  background: #F1F5F9;
  color: #64748B;
  font-size: 24rpx;
  font-weight: 600;
}

.day-chip.active {
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%);
  color: #FFF;
}

.picker-wrap {
  background: #F8FAFC;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 30rpx;
  color: #0F172A;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  color: #94A3B8;
  font-size: 24rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  padding: 30rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 32rpx;
  border-top: 1px solid rgba(0,0,0,0.05);
  z-index: 100;
}

.btn-sec {
  width: 240rpx;
  height: 108rpx;
  background: #F1F5F9;
  color: #475569;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 36rpx;
  font-weight: 600;
  font-size: 30rpx;
}

.btn-pri {
  flex: 1;
  height: 108rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #10B981 100%); /* 品牌蓝绿渐变 */
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 36rpx;
  font-weight: 600;
  font-size: 32rpx;
  box-shadow: 0 16rpx 32rpx rgba(59, 130, 246, 0.3); /* 蓝色投影 */
}
